@{
  Layout = "_Layout";
}
<div class="container">

  <h1>Your Contacts</h1>

  @* Making sure my grammar is proper *@
  @if(@Model.Count == 0)
  {
    <h3>You have no contacts.</h3>
  }
  else if(@Model.Count == 1)
  {
    <h3>You have @Model.Count contact.</h3>
  }
  else
  {
    <h3>You have @Model.Count contacts.</h3>
  }

  <ul>
    @* Loops through the list of contacts and displays first and last name of each *@
    @* Each contact links to a contact details page *@
    @foreach(var contact in Model)
    {
      <li><a href="/contact/@contact.GetId()">@(contact.GetFirstName() + " " + contact.GetLastName())</a></li>
    }
  </ul>
  <br>
  <br>

  @* Buttons for adding contacts and clearing all contacts from the list *@
  <form action="/contacts/clear" method="post">
    <a href="/contact/form"><button type="button" class="btn-success">Add Contact</button></a>
    @if(@Model.Count > 0)
    {
        <button type="submit" class="btn-danger">Clear Contacts</button>
    }
  </form>
</div>
